generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  picture   String?
  role      Role
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  postedJobs Job[] @relation("PostedJobs")
  applications Application[] @relation("Applications")
}

model Job {
  id          String    @id @default(cuid())
  title       String
  description String
  pay         Int
  status      JobStatus @default(OPEN)

  posterId String
  poster   User   @relation("PostedJobs", fields: [posterId], references: [id])
  applications Application[]
}

model Application {
  id          String            @id @default(cuid())
  coverLetter String
  status      ApplicationStatus @default(PENDING)
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  applicantId String
  applicant   User   @relation("Applications", fields: [applicantId], references: [id])
  jobId       String
  job         Job    @relation(fields: [jobId], references: [id])
}

enum Role {
  YOUTUBER
  TALENT
}

enum JobStatus {
  DRAFT
  OPEN
  CLOSED
}

enum ApplicationStatus {
  DRAFT
  PENDING
  REJECTED
  ACCEPTED
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
